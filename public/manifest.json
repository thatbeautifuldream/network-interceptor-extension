{
  "manifest_version": 3,
  "name": "API Request Interceptor",
  "version": "1.0.0",
  "description": "Intercept and modify API requests",
  "action": {
    "default_popup": "index.html"
  },
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "side_panel": {
    "default_path": "index.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  }
}